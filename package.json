{
  "name": "zotero-report-customizer",
  "version": "5.0.24",
  "description": "Zotero Report Customizer",
  "scripts": {
    "lint": "tslint -t stylish 'content/**/*.ts' 'pages/**/*.ts'",
    "pug": "pug -c content/report.pug",
    "prebuild": "npm run lint",
    "build": "webpack",
    "postbuild": "zotero-plugin-zipup build zotero-report-customizer",
    "release": "zotero-plugin-release",
    "postversion": "git push --follow-tags",
    "start": "rm -f ~/.BBTZ5TEST/extensions/*report-customizer*xpi && echo `pwd`/build > ~/.BBTZ5TEST/extensions/report-customizer@iris-advies.com && /Applications/Zotero.app/Contents/MacOS/zotero -P BBTZ5TEST -ZoteroDebugText -datadir profile > ~/.BBTZ5TEST.log &"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/retorquere/zotero-report-customizer.git"
  },
  "author": {
    "name": "Emiliano Heyns",
    "email": "emiliano.heyns@iris-advies.com"
  },
  "bugs": {
    "url": "https://github.com/Emiliano Heyns/zotero-report-customizer/issues"
  },
  "homepage": "https://github.com/Emiliano Heyns/zotero-report-customizer",
  "dependencies": {
    "@mdi/font": "^3.8.95",
    "@types/source-map": "^0.5.7",
    "ajv": "^6.10.2",
    "circular-dependency-plugin": "^5.0.2",
    "dedent": "^0.7.0",
    "fs-extra": "^8.1.0",
    "handlebars": "^4.1.2",
    "indent-string": "^4.0.0",
    "install": "^0.13.0",
    "json-schema-defaults": "^0.4.0",
    "json-schema-to-typescript": "^6.1.3",
    "npm": "^6.10.1",
    "npm-check-updates": "^3.1.20",
    "nunjucks": "^3.2.0",
    "pug": "^2.0.4",
    "pug-cli": "^1.0.0-alpha6",
    "pug-loader": "^2.4.0",
    "raw-loader": "^3.1.0",
    "rimraf": "^2.6.3",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3",
    "webpack": "^4.36.1",
    "webpack-cli": "^3.3.6",
    "zotero-plugin": "0.0.85"
  },
  "xpi": {
    "name": "Zotero Report Customizer",
    "updateLink": "https://github.com/retorquere/zotero-report-customizer/releases/download/v{version}/zotero-report-customizer-{version}.xpi",
    "releaseURL": "https://github.com/retorquere/zotero-report-customizer/releases/download/release/"
  },
  "devDependencies": {
    "url-loader": "^2.1.0"
  }
}
